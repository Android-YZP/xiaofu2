<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bindstyle"
    android:paddingLeft="@dimen/x60"
    android:paddingBottom="@dimen/x20"
    android:paddingTop="@dimen/x20"
    android:paddingRight="@dimen/x60"
    >

    <ImageView
        android:id="@+id/overimg"
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/x30"
        android:src="@drawable/icon_binding"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登陆成功"
        android:textColor="#000000"
        android:layout_below="@+id/overimg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y9"
        android:textSize="@dimen/x10"
        android:singleLine="true"
        />



</RelativeLayout>