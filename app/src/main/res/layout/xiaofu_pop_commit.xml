<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weight_bg_2_new"
    >


    <TextView
        android:id="@+id/pop_connect_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/x10"
        android:layout_centerHorizontal="true"
        android:text="确认上传并分析?"
        android:layout_marginTop="@dimen/x16"
        />


    <ImageView
        android:id="@+id/setting_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x16"
        android:src="@drawable/skin_pop_line"
        android:layout_below="@+id/pop_connect_title"
        android:layout_marginBottom="@dimen/x16"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/photo_layout_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_line"
        >
    </android.support.v7.widget.RecyclerView>



    <ImageView
        android:id="@+id/setting_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x13"
        android:src="@drawable/skin_pop_line"
        android:layout_below="@+id/photo_layout_recycler"
        />

    <RelativeLayout
        android:id="@+id/photo_layout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:gravity="center_vertical"
        android:layout_below="@+id/setting_line2"
        >
        <TextView
            android:id="@+id/sex_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/sex_btn_man"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x10"
            android:src="@drawable/skin_man_btn_n"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x30"
            />
        <ImageView
            android:id="@+id/sex_btn_women"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x10"
            android:src="@drawable/skin_women_btn_s"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/setting_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:src="@drawable/skin_pop_line"
        android:layout_below="@+id/photo_layout1"
        />

    <RelativeLayout
        android:id="@+id/photo_layout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:layout_below="@+id/setting_line3"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="年龄"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/age_select_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击选择"
            android:textColor="#a7b1c6"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x16"
            />
        <ImageView
            android:id="@+id/age_select"
            android:layout_width="@dimen/x6"
            android:layout_height="@dimen/x6"
            android:src="@drawable/skin_confirm_1_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/setting_line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:src="@drawable/skin_pop_line"
        android:layout_below="@+id/photo_layout2"
        />


    <LinearLayout
        android:id="@+id/photo_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/x16"
        >

        <ImageView
            android:id="@+id/camera_commit"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x20"
            android:src="@drawable/btnbg1"
            />
        <ImageView
            android:id="@+id/camera_cancle"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x20"
            android:src="@drawable/btnbg2"
            android:layout_marginLeft="@dimen/x9"
            />
    </LinearLayout>

    <Button
        android:id="@+id/close_layout"
        android:layout_width="@dimen/x24"
        android:layout_height="@dimen/y17"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/close_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/x5"
        />


</RelativeLayout>