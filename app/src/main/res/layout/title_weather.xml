<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/top_bg_time"
    android:id="@+id/weatherlayout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <Button
            android:id="@+id/cityname"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y10"
            android:layout_marginLeft="@dimen/x5"
            android:background="@null"
            android:text="无锡"
            android:textColor="@color/string_gray5"
            android:textSize="@dimen/x8" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/top_wea_line1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/status"
                android:layout_width="@dimen/x23"
                android:layout_height="@dimen/y16"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginTop="@dimen/y2"
                android:src="@mipmap/light_rain" />

            <TextView
                android:id="@+id/today_wendu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x11"
                android:layout_toRightOf="@id/status"
                android:text="--°"
                android:textColor="@color/string_gray5"
                android:textSize="@dimen/x15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/today_max_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x9"
                android:layout_marginTop="@dimen/y13"
                android:layout_toRightOf="@id/status"
                android:text="--"
                android:textColor="@color/string_gray5"
                android:textSize="@dimen/x7" />


        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@drawable/top_wea_line2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tomorrow_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y2"
            android:text="--"
            android:textColor="@color/string_gray5"
            android:textSize="@dimen/x8" />

        <ImageView
            android:id="@+id/tomorrow_status"
            android:layout_width="@dimen/x17"
            android:layout_height="@dimen/y12"
            android:layout_marginTop="@dimen/y1"
            android:src="@mipmap/light_rain" />

        <TextView
            android:id="@+id/tomorrow_min_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----"
            android:textColor="@color/string_gray5"
            android:textSize="@dimen/x7" />

    </LinearLayout>

    <TextView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@drawable/top_wea_line2" />

